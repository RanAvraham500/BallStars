<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:ignore="MissingDefaultResource"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_gravity="center"
    android:gravity="center"
    android:id="@+id/dialogLayout">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:background="@drawable/login_box_bg"
        android:gravity="center"
        android:layout_marginVertical="10dp"
        android:layout_marginHorizontal="20dp">
        <TextView
            android:id="@+id/tvGameState"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Game State"
            android:textSize="40sp"
            android:textColor="@color/main_color"/>
        <TextView
            android:id="@+id/tvGameScore"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Score: "
            android:textSize="20sp"
            android:textColor="@color/main_color"
            android:layout_marginBottom="10dp"/>
    </LinearLayout>

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:columnCount="3"
        android:rowCount="3">
        <ImageButton
            android:id="@+id/btnBackgroundMusic"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:src="@drawable/music_icon"
            android:background="@drawable/button_bg"
            android:layout_margin="20dp"
            />
        <ImageButton
            android:id="@+id/btnSoundEffects"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:src="@drawable/game_icon"
            android:background="@drawable/button_bg"
            android:layout_margin="20dp"

            />
        <ImageButton
            android:id="@+id/btnVibration"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:src="@drawable/vibration_icon"
            android:background="@drawable/button_bg"
            android:layout_margin="20dp"

            />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnRestart"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:drawableTop="@drawable/restart_icon"
            android:paddingTop="10dp"
            android:text="Restart"
            android:textSize="20sp"
            android:textColor="@color/secondary_color"
            android:background="@drawable/button_bg"
            android:layout_margin="20dp"
            />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnResume"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:drawableTop="@drawable/resume_icon"
            android:paddingTop="10dp"
            android:text="Resume"
            android:textSize="20sp"
            android:textColor="@color/secondary_color"
            android:background="@drawable/button_bg"
            android:layout_margin="20dp"
            />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnBack"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:drawableTop="@drawable/home_icon"
            android:paddingTop="10dp"
            android:text="Back"
            android:textSize="20sp"
            android:textColor="@color/secondary_color"
            android:background="@drawable/button_bg"
            android:layout_margin="20dp"
            />

    </GridLayout>
</LinearLayout>